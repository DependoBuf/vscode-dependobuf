{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "DBuf",
    "patterns": [
        {
            "include": "#storage"
        },
        {
            "include": "#type"
        },
        {
            "include": "#numericConst"
        },
        {
            "include": "#boolConst"
        },
        {
            "include": "#stringConst"
        },
        {
            "include": "#variableConst"
        }
    ],
    "repository": {
        "storage": {
            "name": "storage.type.dbuf",
            "match": "message|enum"
        },
        "type": {
            "name": "entity.name.type.dbuf",
            "match": "\\b[A-Z]\\w*"
        },
        "numericConst": {
            "name": "constant.numeric.dbuf",
            "match": "(\\d+u)|([+-]?\\d+(\\.\\d+)?)"
        },
        "boolConst": {
            "name": "constant.language.dbuf",
            "match": "true|false"
        },
        "stringConst": {
            "name": "string.quoted.double.dbuf",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.dbuf",
                    "match": "\\\\."
                }
            ]
        },
        "variableConst": {
            "name": "variable.other.dbuf",
            "match": "\\b([a-z]\\w*)((\\.)([a-z]\\w*))*"
        },
        "emptyPattern": {
            "name": "constant.language.dbuf",
            "match": "\\*"
        },
        "arrow": {
            "name": "constant.language.dbuf",
            "match": "=>"
        }
    },
    "scopeName": "source.dbuf"
}
