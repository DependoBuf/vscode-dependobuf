{
    "name": "dependobuf",
    "version": "0.1.0",
    "publisher": "DependoBuf",
    "engines": {
        "vscode": "^1.98.0"
    },
    "license": "GNU GPL V3",
    "bugs": {
        "url": "https://github.com/DependoBuf/vscode-dependobuf/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/DependoBuf/vscode-dependobuf.git"
    },
    "displayName": "DependoBuf",
    "description": "DBuf language support",
    "categories": [
        "Programming Languages",
        "Linters",
        "Formatters"
    ],
    "keywords": [
        "dbuf"
    ],
    "main": "./dist/extension",
    "contributes": {
        "commands": [
            {
                "command": "dependobuf.installLSP",
                "title": "Install DependoBuf Language Server",
                "category": "DBuf"
            }
        ],
        "languages": [
            {
                "id": "dbuf",
                "aliases": [
                    "DBuf",
                    "dbuf"
                ],
                "extensions": [
                    ".dbuf"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "dbuf",
                "scopeName": "source.dbuf",
                "path": "./syntaxes/dbuf.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "package": "npm run check-types && node esbuild.js --production",
        "compile": "npm run check-types && node esbuild.js",
        "check-types": "tsc --noEmit",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "lint": "eslint ./src  --ext .ts,.tsx",
        "test": "",
        "deploy": "vsce publish --yarn"
    },
    "dependencies": {
        "fs-extra": "^11.3.0",
        "glob": "^11.0.1",
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin": "^5.1.0",
        "@types/fs-extra": "^11.0.4",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.13.14",
        "@types/vscode": "^1.98.0",
        "@typescript-eslint/eslint-plugin": "^8.28.0",
        "@typescript-eslint/parser": "^8.28.0",
        "@vscode/vsce": "^3.6.0",
        "esbuild": "^0.25.5",
        "eslint": "^9.23.0",
        "mocha": "^11.2.0",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.35.1"
    }
}